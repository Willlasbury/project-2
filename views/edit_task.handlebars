{{! Will have the title of the project they just added here }}

<section class="flex flex-col grow">
  <h3 class="text-3xl" data-id={{ProjectId}} id="title">{{project.title}}</h3>
  <form class="flex flex-col my-4">
    <label for="task-name">Task name</label>
    <textarea name="task-name" class="max-w h-8 border-solid border-2 border-blue-950 my-2"
      id="task-name">{{name}}</textarea>
    <label for="task-name">Due date</label>
    {{!-- <textarea class="max-w h-8 border-solid border-2 border-blue-950 my-2" id="due-date">{{due_date}}</textarea> --}}
     </div>
        <input datepicker type="text" class="  max-w h-8 border-solid border-2 border-blue-950 my-2" autocomplete="off" value="{{due_date}}" placeholder="Select date" id="due-date">
        </div>
    <label for="task-name">Description</label>
    <textarea class="max-w h-30 border-solid border-2 border-blue-950 my-2" id="description">{{description}}</textarea>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 border border-blue-700 rounded w-40"
      id="{{id}}">Edit Task</button>
  </form>
</section>

<script src="/js/editTask.js"></script>