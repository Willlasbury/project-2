<article
  class="flex flex-row space-between w-11/12 rounded bg-{{status}}
    hover:drop-shadow-xl border-solid border-2 border-blue-950 justify-center my-2"
>
  <a href="/project/{{id}}" class="w-full text-center">
    <section>

      <h3 class="text-2xl font-bold text-center">{{title}}</h3>
      <section
        class="flex flex-row justify-center"
        id="project"
        data-id="{{id}}"
      >

      <h3
        class="time-left text-lg pr-1"
        >{{time_until_due}}</h3>

      <span
       class="time-left-span text-lg pr-4"
       ></span>

      <p class="text-lg">Status:</p>
      <p class="text-2xl pl-4">{{icon}}</p>
      
    </section>

  </a>
</article>
<button
  class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 border border-blue-700 rounded my-2 w-3/4"
>Completed</button>